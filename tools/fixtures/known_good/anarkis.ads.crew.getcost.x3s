#lang: 44
#origin_mod: ADS
#source: mods/ADS/scripts/anarkis.ads.crew.getcost.xml

$array = $ref.object -> get marines array
$cnt =  size of array $array
$price = 0
while $cnt
dec $cnt =
$select = $array[$cnt]
$status = $select -> get local variable: name='anarkis.ads.marine'
if $status == 1
$price = $price + 16000
else if $status == 2
$price = $price + 24000
end
end
return $price
