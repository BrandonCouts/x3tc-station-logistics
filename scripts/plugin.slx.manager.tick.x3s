      end
      $dstMinUnits = $dst[$IDX_MIN_UNITS]
      $dstAmount = $dst[$IDX_AMOUNT]
      $shortfall = $dstMinUnits - $dstAmount
      if $shortfall <= 0
        continue
      end
      $dstMaxUnits = $dst[$IDX_MAX_UNITS]
      $room = $dstMaxUnits - $dstAmount
      if $room <= 0
        continue
      end
      $need = null -> call script 'lib.slx.util' : function='Min', a=$shortfall, b=$room
      if $need <= 0
        continue
      end
      $dstChunk = $dst[$IDX_CHUNK]
      if $dstChunk <= 0
